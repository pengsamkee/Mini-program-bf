/* checkNutrition/pages/nutritionDetail/index.wxss */

.wrap {
  width: 100%;
  height: 100%;
  padding: 0 32rpx 48rpx 32rpx;
  box-sizing: border-box;
  font-weight: 400;
  font-family:PingFangSC-Regular,PingFang SC;
}

.food-info {
  width: 100%;
  margin-top: 24rpx;
  margin-bottom: 15rpx;
}

.food-info .name {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(53, 53, 53, 1);
}

.food-info .enegry {
  font-size: 24rpx;
  color: rgba(136, 136, 136, 1);
}

.canvas-info {
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.canvas-info .left {
  height: 100%;
  flex:1;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  margin-left:-20rpx;
}
#canvasf2{
  overflow: visible;
}
.canvas-wrap {
  width:100%;
  height: 100%;
  position: relative;
}

.right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width:240rpx;
}

.right-enegry {
  font-size: 60rpx;
  color: rgba(53, 53, 53, 1);
  line-height: 80rpx;
}

.right-total-enegry {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(136, 136, 136, 1);
}

.food-detail-public {
}

.food-detail-public .title {
  font-size: 28rpx;
  color: rgba(53, 53, 53, 1);
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f8f8f8;
  /* margin-top: 54rpx; */
  margin-bottom: 28rpx;
}

.food-detail-public .detail {
  width: 100%;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin:10rpx 0;
  letter-spacing: 1px;
  font-family:PingFangSC-Regular,PingFang SC;
}

.item .name {
  font-size: 28rpx;
  color: rgba(135, 135, 135, 1);
}

.item .weight {
  font-size: 28rpx;
  color: rgba(53, 53, 53, 1);
}
.title.minc{
margin-top: 48rpx;
}