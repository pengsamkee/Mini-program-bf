.page {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 42rpx 24rpx 162rpx 24rpx;
  box-sizing: border-box;
}
.page .page-top {
  width: 100%;
}
.page .page-top .set-text {
  font-size: 32rpx;
  color: #434343;
}
.page .page-top .how-set-text {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.page .page-top .how-set-text .tip-text {
  font-size: 24rpx;
  color: #acacac;
}
.page .page-top .how-set-text .tip-how {
  font-size: 24rpx;
  color: #f5a625;
  text-decoration: underline;
}
.page .list {
  margin-top: 50rpx;
}
.page .list .item {
  margin-bottom: 24rpx;
  width: 702rpx;
  background: #ffffff;
  box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 30rpx 24rpx 40rpx 24rpx;
  box-sizing: border-box;
}
.page .list .item .item-top {
  display: flex;
  align-items: center;
}
.page .list .item .item-top .item-num {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ed2c48;
  width: 46rpx;
  height: 46rpx;
  border-radius: 35rpx;
  border: 1px solid #ed2c48;
}
.page .list .item .item-top .food-name {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #535353;
}
.page .list .item .weight-unit {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page .list .item .weight-unit .weight .weight-text {
  margin: 22rpx 0 10rpx 0;
  font-size: 24rpx;
  color: #b0b0b0;
}
.page .picker {
  font-size: 28rpx;
  color: #414141;
  padding: 0 18rpx 0 30rpx;
  box-sizing: border-box;
  width: 306rpx;
  height: 80rpx;
  border-radius: 10rpx;
  border: 1px solid #c9cacb;
}
.page .picker-true {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page image {
  width: 8rpx;
  height: 18rpx;
  transform: rotate(90deg);
}
.page .w-100 {
  width: 100%;
}
.page .person-number {
  width: 702rpx;
  background: #ffffff;
  box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 16rpx 24rpx 26rpx 24rpx;
  box-sizing: border-box;
}
.page .person-number .person-number-text {
  font-size: 28rpx;
  color: #535353;
  margin-bottom: 32rpx;
}
.page .next-button {
  width: 100%;
  height: 128rpx;
  box-shadow: 0px -2rpx 12rpx 0px rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx 0 34rpx;
  box-sizing: border-box;
  background: #fff;
}
.page .next-button .number .total-num {
  font-size: 32rpx;
  color: #434343;
}
.page .next-button .number .text {
  font-size: 24rpx;
  color: #acacac;
}
.page .next-button .next {
  width: 266rpx;
  height: 70rpx;
  background: #ed2c48;
  border-radius: 35rpx;
  font-size: 28rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup {
  width: 100%;
}
.popup .popup-custom-class {
  box-shadow: 0px -4rpx 22rpx 0px rgba(0, 0, 0, 0.15);
  border-radius: 24rpx 24rpx 4rpx 4rpx;
}
.popup .picker-custom-class .active-class {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ed2c48;
}
.popup .picker-custom-class .toolbar-class {
  font-size: 28px;
}
.popup .picker-custom-class .toolbar-class .van-picker__cancel {
  color: #646464;
}
.popup .picker-custom-class .toolbar-class .van-picker__confirm {
  color: #ed2c48;
}
.popup .picker-custom-class .column-class {
  font-size: 28rpx;
  color: #444;
}
.popup .picker-custom-class .van-picker__title {
  color: #444;
  font-size: 28rpx;
}
