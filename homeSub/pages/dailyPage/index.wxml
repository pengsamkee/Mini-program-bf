<!--homeSub/pages/dailyPage/index.wxml-->
<view class="page">
    <view class="top">
        <view class="person-info">
            <view class="avatar-wrap">
                <view class="avatar-border">
                    <open-data type="userAvatarUrl" class='avater'></open-data >
                </view>
            </view>
            <view class="name-wrap">
                <open-data type="userNickName"></open-data>
            </view>
        </view>
        <view class="time">2020年2月15日</view>
    </view>
    <view class="daily-title">今日营养评分</view>
    <view class="content">
        <view class="score">
            43分
        </view>
        <progress class="progress" percent="43" show-info="false" stroke-width="10" color="#09BB07" backgroundColor="#ccc" activeColor="#648" active-mode="backwards" border-radius='5'></progress>
        <view class="level-wrap">
            <view class="public specail">
                较差
            </view>
            <view>
                一般
            </view>
            <view>
                良好
            </view>
            <view>
                优秀
            </view>
        </view>
        <view class="level-win"> 你的得分超过31%的用户 </view>
          
    </view>
    <button>1元获取今日报告细节</button>
</view>
  
