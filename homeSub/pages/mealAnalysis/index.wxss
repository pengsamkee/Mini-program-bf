page {
  width: 100%;
}
.wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}
.wrap .title {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #353535;
  padding: 50rpx 0 0 32rpx;
  box-sizing: border-box;
  align-self: flex-start;
}
.canvas-info {
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 32rpx;
  box-sizing: border-box;
}
.canvas-info .left {
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}
#canvasf2 {
  overflow: visible;
}
.canvas-wrap {
  width: 100%;
  height: 100%;
  position: relative;
}
.right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 180rpx;
}
.right-enegry {
  font-size: 60rpx;
  color: #353535;
  line-height: 80rpx;
}
.right-total-enegry {
  font-size: 24rpx;
  font-weight: 300;
  color: #888888;
  margin-right: 20rpx;
}
