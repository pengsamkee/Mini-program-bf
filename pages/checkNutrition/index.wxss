/* 下方是“加载中。。“的样式 */

.loading-wrap {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  text-align: center;
}

.loading-text {
  margin-left: 48rpx;
  font-size: 24rpx;
  color: #666;
}

.loading_ball {
  border: 0;
  margin: 28rpx 0 0 0;
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  border-radius: 50%;
  animation: k-loadingO 2s ease infinite;
}

.a {
  background: #19a68c;
  animation-delay: -1.5s;
}

.b {
  background: #f63d3a;
  animation-delay: -1s;
}

.c {
  background: #fda543;
  animation-delay: -0.5s;
}

.d {
  animation: k-loadingO 2s ease infinite;
  background: #193b48;
}

@keyframes k-loadingO {
  0%, 100% {
    transform: translate(0);
  }

  25% {
    transform: translate(160%);
  }

  50% {
    transform: translate(160%, 160%);
  }

  75% {
    transform: translate(0, 160%);
  }
}

