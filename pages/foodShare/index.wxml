  <view class="draw-wrap draw_canvas" style="height:{{imgHeight}}px">
    <image class="draw_canvas share-text" src="./../../images/share_text.png" data-type="image" data-url="./../../images/share_text.png"/>
    <image class="url-image draw_canvas" mode="widthFix" src='{{image_url}}' data-type="image" data-url="{{image_url}}"></image>
    <view class='user'>
      <image src='{{user_info.avatar_url}}' class="header-img draw_canvas" data-type="radius-image" data-url="{{user_info.avatar_url}}"></image>
    </view> 

    <view class="mask-wrap">
      <image class="qrcode-bg" src='./../../images/share_qrcode_bg.png' data-type="image" data-url="./../../images/share_qrcode_bg.png"/>
      <view class='content-wrap2'>
        <view class='content-left draw_canvas'>
          <view class='title draw_canvas' data-type="text" data-text="午餐大分析">午餐大分析</view>
          <view class="public">
            <view class='draw_canvas' data-type="text" data-text="食物丰富度">食物丰富度</view><view class='draw_canvas font-weight font-weight-space' data-type="text" data-text="{{5}}">{{5}}</view><view class='draw_canvas text12' data-type="text" data-text="种(每日需12种)">种(每日需12种)</view>
          </view>
          <view class="public">
            <view class='draw_canvas' data-type="text" data-text="蛋白质:">蛋白质:</view><view class='draw_canvas font-weight' data-type="text" data-text="{{multiOrSingle.protein.value}}">{{multiOrSingle.protein.value}}</view><view class='draw_canvas' data-type="text" data-text="{{multiOrSingle.protein.unit}}">{{multiOrSingle.protein.unit}}</view>
          </view>
          <view class="public">
            <view class='draw_canvas' data-type="text" data-text="脂肪:">脂肪:</view>
            <view class='draw_canvas font-weight' data-type="text" data-text="{{multiOrSingle.fat.value}}">{{multiOrSingle.fat.value}}</view>
            <view class='draw_canvas' data-type="text" data-text="{{multiOrSingle.fat.unit}}">{{multiOrSingle.fat.unit}}</view>
          </view>
          <view class="public">
            <view class='draw_canvas' data-type="text" data-text="碳水化合物:">碳水化合物:</view>
            <view class='draw_canvas font-weight' data-type="text" data-text="{{multiOrSingle.carb.value}}">{{multiOrSingle.carb.value}}</view>
            <view class='draw_canvas' data-type="text" data-text="{{multiOrSingle.carb.unit}}">{{multiOrSingle.carb.unit}}</view>
          </view>
        </view>
        <view class='content-wrap-right'>
          <image src="{{multiOrSingle.qr_code.image_url}}" class="code-image draw_canvas" data-type="image" data-url="{{multiOrSingle.qr_code.image_url}}"></image>
          <view class="code-image-text draw_canvas" data-type="text" data-text="长按识别小程序">长按识别小程序</view>
        </view>
      </view>
    </view>
