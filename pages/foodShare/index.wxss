/* pages/foodShare/index.wxss */

.bg {
  display: flex;
  flex-direction: column;
  /* *********************************** */
  /* align-items:center; */
  /* justify-content: center; */
  /* overflow: hidden; */
  width: 100vw;
  /* height: 100vh; */
  background-image: url("https://dietlens-1258665547.cos.ap-shanghai.myqcloud.com/mini-app-image/sharing_background_pic.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  position: relative;
}

.share-card {
  margin-top: 28rpx;
  background-color: white;
  margin-bottom: 60rpx;
  margin-left: 64rpx;
  margin-right: 64rpx;
  box-shadow: 0 12rpx 34rpx 0 rgba(0, 0, 0, 0.10);
  height: auto;
  width: auto;
  display: flex;
  flex-direction: column;
}

.full-width-image {
  width: auto;
  height: auto;
}

.button-layer {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  margin-top: 40px;
  margin-bottom: 40px;
  /* padding:0 20rpx; */
}

.save-album-btn {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #ff822d;
  letter-spacing: 0.16rpx;
  background: #fff;
  border: 2rpx solid #ff822d;
  border-radius: 8rpx;
  width: 182rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn {
  background-color: #ff822d;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fff;
  letter-spacing: 0.16rpx;
  border: 2rpx solid #ff822d;
  border-radius: 8rpx;
  width: 278rpx;
  height: 90rpx;
}

.progress-wrap{
  width:100%;
  margin-top:40%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.progress-loading{
  width:60%;
  margin-bottom:40rpx;
}

.canvas-image{
  margin: 80rpx auto 0;
  box-shadow: 0 0 14rpx;
}
.draw-wrap{
  background: white;
  box-shadow: 0 0 14rpx 2rpx #888888;
  position: fixed;
  top:14000rpx;
  /* position: absolute;
  top:1400rpx; */
}
.draw-wrap .image{
  display: block;
}
.user{
  position: absolute;
  top:80rpx;
  left:30rpx;
}
.header-img{
  height:100rpx;
  width:100rpx;
  border:8rpx solid #fff;
  position: absolute;
  top:-20rpx;
  z-index: 888;
}

.username{
  height:59rpx;
  background: #ed2c48;
  color: #fff;
  padding:0 30rpx 0 38rpx;
  position: relative; 
  top: 1rpx;
  left:105rpx;
  line-height: 55rpx;
  z-index: 0;
}
.username-image{
  width: 0rpx;
  height: 0rpx;
  border: 30rpx solid #ed2c48;
  position: absolute;
  right:-60rpx;
  top:30rpx;
  z-index: 1;
}



.draw-wrap .mask-wrap{
  position: absolute;
  bottom: 0;
  left:0;
  height:280rpx;
  width:100%;
  color: white;
}

.draw-wrap .mask-wrap .content-wrap{
  width:100%;
  height: 100%;
  position: absolute;
  z-index: 10000;
  top:0;
  left:0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.draw-wrap .mask-wrap .content-wrap .content-wrap-left{

}
.draw-wrap .mask-wrap .content-wrap .content-wrap-left .name{
  font-size: 32rpx;
}
.draw-wrap .mask-wrap .content-wrap .content-wrap-left .meal-richness{
  font-size: 22rpx;
}
.meal-detail{
  display: flex;
  margin-top:30rpx;
}
.meal-detail .public{
  margin-left:50rpx;
  /* width: 130rpx; */
  /* background: #ccc; */
}
.meal-detail .public:nth-of-type(1){
  margin-left:0rpx;
}
.meal-detail .public .public-weight{
  font-size: 26rpx;

  white-space:nowrap; 
}
.meal-detail .public .public-name{
  font-size: 20rpx;
  margin-top:10rpx;
  
}
.content-wrap-right{
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.content-wrap-right .calorie{
  font-size: 33rpx;
}
.content-wrap-right .code-image{
  width:110rpx;
  height: 110rpx;
  margin-top:10rpx;
  margin-bottom:6rpx;
  display: block;
}
.content-wrap-right .code-image-text{
  font-size: 18rpx;
}

/* 食物只有一个时候 */
.img-and-name-wrap{
 position: relative;
}

.mask-wrap-single{
  position: absolute;
  z-index: 10;
  bottom:0;
  left:0;
  height:120rpx;
  width:100%;
}

.img-and-name-wrap .content-wrap-single{
  width:100%;
  height: 100%;
  position: absolute;
  z-index: 10;
  top:0;
  left:0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:30rpx;
  box-sizing: border-box;
  color:#fff;
}
.single-name{
font-size: 36rpx;
}
.single-calories{
display: flex;
align-items: baseline;
}
.calories-number{
font-size: 36rpx;
}
.calories-unit{
font-size: 22rpx;
}
.single-bottom{
  /* display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column; */
  height:340rpx;
}
.tips{
  width:100%;
  height:135rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.public-mic{
  height:30rpx;
  width:500rpx;
  border-radius: 5%;
  border: 1px solid #555;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #555;
  font-size: 24rpx;

}
.public-mic:nth-of-type(2){
  margin-top:10rpx;
}
.tips image{
  width:0;
  height:0;

}
.meal-detail-qrcode{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -20rpx;

}
.meal-detail-special{
  margin-top:10rpx;
}
.eat-number .number{
  font-size: 24rpx;
  color: #555 
}
.qrcode-wrap{
  text-align: center;
  margin-left:60rpx;
}
.qrcode{
  width:120rpx;
  height: 120rpx;
}
.description{
  font-size:20rpx; 
}

.mask{
  width:100%;
  height: 100%;
  opacity: 0.5;
  background: #000;
}
