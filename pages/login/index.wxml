
<view class="login-container">
  <view class="swiper-father">
    <swiper 
      indicator-dots="{{true}}"
      autoplay="{{true}}" 
      interval="{{4000}}" 
      indicator-active-color='#484848'
      class="swiper"
      circular='{{true}}'
    >
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item class='swiper-item'>
          <image src="{{item}}" class='image'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  
