/* pages/report/report.wxss */

page{
  width:100%;
  height: 100%;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
}
.wrap{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  /* overflow: hidden; */
}
.day-or-week{
  display: flex;
  margin:36rpx 0;
}
.public{
  height: 48rpx;
  width:160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border:2rpx solid rgba(209,209,209,1);
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(110,108,108,1);
  background: #fff;
}
.day{
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  border-right:none;
}
.special{
  height: 60rpx;
  width:210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(110,108,108,1);
  background: #ed2c48;
  border-radius: 24rpx;
  color:#fff;

}
.week{
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  border-left:none;
}
.active{
  background: #ed2c48;
  color:rgba(255,255,255,1);
  border:2rpx solid #ed2c48;
}
.lists{
  flex: 1;
  width: 100%;
  display: flex;
}
.list-week{
  flex: 1;
  width: 100%;
  display: flex;
}
.scroll-view{
  width:100%;
  height: 100%;
}
/* .block{
  padding-bottom: 12rpx;
