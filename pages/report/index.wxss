.scroll-day{
  width:670rpx;
  height:136rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 12rpx 0px rgba(0,0,0,0.15);
  border-radius:12rpx;
  margin:0 auto ;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 0 34rpx;
  box-sizing: border-box;
}
.scroll-day:nth-of-type(1){
  margin-top:12rpx;
}
 
.date{
  font-size:34rpx;
  font-weight:500;
  color:rgba(53,53,53,1);
}
.calorie-num{
  font-size:28rpx;
  color:rgba(157,157,157,1);
}
.calorie-num text{
  color:#F3465A;
  margin:0 8rpx;
}

.scroll-day-right{
  height: 100%;
  display: flex;
  align-items: center;
  font-size:28rpx;
  color:rgba(157,157,157,1);
}
.scroll-day-right text{
  color:#F3465A;
  margin:0 28rpx 0 8rpx;
}
.scroll-day-right image{
  width:8rpx;
  height: 26rpx;
}

.page{
  background-color: white;
  width: 100%;
  padding:24rpx;
  box-sizing: border-box;
}
.card {
  display:flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  height:476rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 12rpx 0px rgba(0,0,0,0.15);
  border-radius:12rpx;
}
